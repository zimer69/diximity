<div class="mb-20 shadow-lg">
  <div class="max-w-md w-full space-y-6 bg-white p-8 shadow rounded-md mx-auto">
    <h2 class="text-3xl font-bold text-gray-900 text-center">Sign in to your account</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="space-y-4">
        <div>
          <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "mt-1 w-full rounded-md border border-gray-300 p-2" %>
        </div>

        <div>
          <%= f.label :password, class: "block text-sm font-medium text-gray-700" %>
          <%= f.password_field :password, autocomplete: "current-password", class: "mt-1 w-full rounded-md border border-gray-300 p-2" %>
        </div>

        <% if devise_mapping.rememberable? -%>
          <div class="flex items-center">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me, class: "ml-2 block text-sm text-gray-900" %>
          </div>
        <% end %>

        <div class="pt-4">
          <%= f.submit "Sign in", class: "w-full bg-blue-600 text-white py-2 px-4 rounded hover:bg-blue-700 shadow" %>
        </div>
      </div>
    <% end %>

    <div class="text-center mt-4 text-sm text-gray-600">
      <%= link_to "Forgot your password?", new_password_path(resource_name), class: "text-blue-600 hover:underline" %>
    </div>
  </div>
</div>