<% if resource.errors.any? %>
  <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative max-w-xl mx-auto mt-4 mb-4" role="alert">
    <strong class="font-bold">Oops!</strong>
    <span class="block sm:inline">There <%= resource.errors.count == 1 ? 'was' : 'were' %> <%= pluralize(resource.errors.count, "error") %>:</span>
    <ul class="mt-2 ml-4 list-disc list-inside text-sm">
      <% resource.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
