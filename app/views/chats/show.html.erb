<% if notice.present? %>
  <p class="py-2 px-3 bg-green-900 mb-5 text-green-300 font-medium rounded-lg inline-block" id="notice">
    <%= notice %>
  </p>
<% end %>

<div class="w-1/2 mx-auto mb-10">
  <div class="bg-gray-800 text-white py-4 px-6 rounded-t-xl border-b border-gray-700">
    <h3 class="text-2xl font-bold flex items-center gap-4">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
      </svg>
      <% if current_user == @chat.connection.user %>
        <% other_user = @chat.connection.connected_user %>
      <% else %>
        <% other_user = @chat.connection.user %>
      <% end %>
      <%= link_to user_path(other_user), class: "flex items-center gap-3 hover:text-blue-400 transition-colors duration-200" do %>
        <div class="w-10 h-10 rounded-full bg-gray-700 flex items-center justify-center overflow-hidden">
          <% if other_user.profile_picture.attached? %>
            <%= image_tag other_user.profile_picture.variant(resize_to_fill: [40, 40]), class: "w-full h-full object-cover" %>
          <% else %>
            <span class="text-gray-200 font-medium"><%= other_user.name.split.map(&:first).join[0..1].upcase %></span>
          <% end %>
        </div>
        <div class="flex flex-col items-center">
          <span><%= other_user.name %></span>
          <p class="text-gray-400 text-sm self-start"><%= other_user.specialty %></p>
        </div>
      <% end %>
    </h3>
  </div>

  <!-- Messages Section -->
  <% unless @chat.messages.empty? %>
    <div class="bg-gray-900 shadow-lg rounded-b-xl px-6 py-4">
      <div class="max-h-[60vh] overflow-y-auto custom-scrollbar">
        <div id="messages">
          <%= turbo_stream_from [@chat, "messages", current_user.id] %>
          <%= render partial: "messages/message", collection: @chat.messages, locals: { current_user_id: current_user.id } %>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Message Input Form -->
  <div class="">
    <%= form_with model: [@chat, Message.create(chat_id: @chat.id)], class: "mt-4", data: { controller: "reset-form", action: "turbo:submit-end->reset-form#reset" } do |f| %>
      <div class="flex gap-4">
        <%= f.text_area :content,
            class: "p-4 flex-1 min-h-[80px] rounded-xl border-gray-600 bg-gray-800 text-gray-100 shadow-sm focus:border-indigo-400 focus:ring-indigo-400 focus:ring-2 focus:ring-opacity-50 transition-all duration-200",
            placeholder: "Type your message..."
        %>
        <%= f.submit "Send",
            class: "rounded-xl py-3 px-6 bg-blue-600 text-white font-medium cursor-pointer hover:bg-blue-500 transition-colors duration-200 flex items-center gap-2"
        %>
      </div>
    <% end %>
  </div>
</div>

<style>
  .custom-scrollbar::-webkit-scrollbar {
    width: 6px;
  }
  
  .custom-scrollbar::-webkit-scrollbar-track {
    background: #1f2937;
    border-radius: 3px;
  }
  
  .custom-scrollbar::-webkit-scrollbar-thumb {
    background: #4b5563;
    border-radius: 3px;
  }
  
  .custom-scrollbar::-webkit-scrollbar-thumb:hover {
    background: #6b7280;
  }
</style>
