<%= form.fields_for :address do |a| %>
  <div class="border-t border-gray-200 pt-4 mt-6">
    <h3 class="text-base font-medium text-gray-800 mb-3">Address</h3>

    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
      <% [:address1, :address2, :city, :state, :zip, :country].each do |field| %>
        <div>
          <%= a.label field, class: "block text-sm font-medium text-gray-700" %>
          <%= a.text_field field, class: "mt-1 w-full rounded-md border border-gray-300 p-2 shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
        </div>
      <% end %>

      <div class="sm:col-span-2">
        <%= a.label :tax_phone_number, class: "block text-sm font-medium text-gray-700" %>
        <%= a.text_field :tax_phone_number, class: "mt-1 w-full rounded-md border border-gray-300 p-2 shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
      </div>
    </div>
  </div>
<% end %> 