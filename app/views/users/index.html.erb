<h1 class="text-2xl font-bold mb-4">Doctors</h1>

<ul class="grid grid-cols-1 md:grid-cols-2 gap-4">
  <% @users.each do |user| %>
    <li class="p-4 border rounded shadow">
      <h2 class="text-xl font-semibold"><%= user.name %></h2>
      <p class="text-gray-600"><%= user.specialty %></p>
      <%= link_to "View Profile", user_path(user), class: "text-blue-600 hover:underline mt-2 inline-block" %>
    </li>
  <% end %>
</ul>
