<%= link_to post_path(post), class: "block hover:scale-105 transition duration-200 bg-white p-4 rounded" do %>
  <div class="bg-white rounded-xl border border-gray-200 shadow-sm overflow-hidden">
      <% if post.image_url.present? %>
        <img src="<%= post.image_url %>" alt="Post image" class="w-full h-48 object-cover" />
      <% end %>

      <div class="p-4 space-y-2">
        <div class="text-xs text-gray-500 flex justify-between">
          <span><%= post.published_at&.strftime('%b %d, %Y') %></span>
          <span><%= post.source.presence || "Diximity News" %></span>
        </div>

        <h2 class="text-lg font-semibold text-gray-900">
          <%= post.title %>
        </h2>

        <p class="text-sm text-gray-700 leading-relaxed">
          <%= truncate(post.body, length: 220) %>
        </p>
      </div>
    </div>
<% end %>