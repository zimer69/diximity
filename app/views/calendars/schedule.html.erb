<div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="mb-6">
    <h1 class="text-3xl font-bold text-gray-900">Schedule Appointment</h1>
    <p class="mt-2 text-sm text-gray-600">Please provide your information to schedule this appointment.</p>
  </div>

  <div class="bg-white shadow sm:rounded-lg">
    <div class="px-4 py-5 sm:p-6">
      <div class="mb-6">
        <h2 class="text-lg font-medium text-gray-900">Appointment Details</h2>
        <p class="mt-1 text-sm text-gray-600">
          Date: <%= @calendar.date.strftime("%B %d, %Y") %><br>
          Time: <%= @calendar.start_time.strftime("%I:%M %p") %> - <%= @calendar.end_time.strftime("%I:%M %p") %>
        </p>
      </div>

      <%= form_with(url: schedule_calendar_path(@calendar), method: :post, local: true, class: "space-y-6") do |f| %>
        <div>
          <%= f.label :patient_name, "Your Name", class: "block text-sm font-medium text-gray-700" %>
          <%= f.text_field :patient_name, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm", required: true %>
        </div>

        <div>
          <%= f.label :patient_email, "Your Email", class: "block text-sm font-medium text-gray-700" %>
          <%= f.email_field :patient_email, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm", required: true %>
        </div>

        <div class="flex justify-end">
          <%= f.submit "Schedule Appointment", class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700" %>
        </div>
      <% end %>
    </div>
  </div>
</div> 