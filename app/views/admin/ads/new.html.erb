<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
  <div class="sm:flex sm:items-center">
    <div class="sm:flex-auto">
      <h1 class="text-xl font-semibold text-gray-900">New Ad</h1>
      <p class="mt-2 text-sm text-gray-700">Create a new advertisement.</p>
    </div>
  </div>

  <div class="mt-8">
    <%= form_with(model: [:admin, @ad], class: "space-y-6") do |f| %>
      <div class="bg-white shadow px-4 py-5 sm:rounded-lg sm:p-6">
        <div class="md:grid md:grid-cols-3 md:gap-6">
          <div class="md:col-span-1">
            <h3 class="text-lg font-medium leading-6 text-gray-900">Ad Information</h3>
            <p class="mt-1 text-sm text-gray-500">
              Enter the details for your new advertisement.
            </p>
          </div>
          <div class="mt-5 md:mt-0 md:col-span-2">
            <div class="grid grid-cols-6 gap-6">
              <div class="col-span-6">
                <%= f.label :target_url, "Target URL", class: "block text-sm font-medium text-gray-700" %>
                <%= f.url_field :target_url, class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md", required: true %>
                <p class="mt-2 text-sm text-gray-500">The URL where users will be directed when clicking the ad.</p>
              </div>

              <div class="col-span-6 sm:col-span-3">
                <%= f.label :specialty, class: "block text-sm font-medium text-gray-700" %>
                <%= f.select :specialty, specialty_options, { include_blank: "Select a specialty" }, class: "mt-1 block w-full py-2 px-3 border border-gray-300 bg-white rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm", required: true %>
                <p class="mt-2 text-sm text-gray-500">The specialty this ad is targeting.</p>
              </div>

              <div class="col-span-6 sm:col-span-3">
                <%= f.label :position, class: "block text-sm font-medium text-gray-700" %>
                <%= f.select :position, [['Left', 'left'], ['Right', 'right']], {}, class: "mt-1 block w-full py-2 px-3 border border-gray-300 bg-white rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
                <p class="mt-2 text-sm text-gray-500">The position where the ad will be displayed.</p>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="flex justify-end">
        <%= link_to "Cancel", admin_ads_path, class: "bg-white py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
        <%= f.submit "Create Ad", class: "ml-3 inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
      </div>
    <% end %>
  </div>
</div> 