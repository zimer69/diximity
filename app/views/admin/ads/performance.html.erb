<div class="py-6">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold text-gray-900">Ad Performance: <%= @ad.title %></h1>
    <%= link_to 'Back to Ads', admin_ads_path, class: 'text-indigo-600 hover:text-indigo-900' %>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
    <!-- Performance Summary -->
    <div class="bg-white shadow rounded-lg p-6">
      <h2 class="text-lg font-medium text-gray-900 mb-4">Performance Summary</h2>
      <div class="grid grid-cols-2 gap-4">
        <div class="bg-gray-50 p-4 rounded-lg">
          <div class="text-sm text-gray-500">Total Clicks</div>
          <div class="text-2xl font-bold text-gray-900"><%= @clicks %></div>
        </div>
        <div class="bg-gray-50 p-4 rounded-lg">
          <div class="text-sm text-gray-500">Total Impressions</div>
          <div class="text-2xl font-bold text-gray-900"><%= @impressions %></div>
        </div>
        <div class="bg-gray-50 p-4 rounded-lg">
          <div class="text-sm text-gray-500">Click-Through Rate</div>
          <div class="text-2xl font-bold <%= @ctr > 2 ? 'text-green-600' : 'text-red-600' %>">
            <%= number_to_percentage(@ctr, precision: 1) %>
          </div>
        </div>
        <div class="bg-gray-50 p-4 rounded-lg">
          <div class="text-sm text-gray-500">Budget</div>
          <div class="text-2xl font-bold text-gray-900">$<%= number_with_precision(@ad.budget, precision: 2) %></div>
        </div>
      </div>
    </div>

    <!-- Daily Performance Chart -->
    <div class="bg-white shadow rounded-lg p-6">
      <h2 class="text-lg font-medium text-gray-900 mb-4">Daily Performance (Last 30 Days)</h2>
      <canvas id="dailyPerformanceChart" class="w-full h-64"></canvas>
    </div>
  </div>

  <script>
    document.addEventListener('turbo:load', function() {
      const ctx = document.getElementById('dailyPerformanceChart').getContext('2d');
      const dailyStats = <%= raw @daily_stats.to_json %>;
      
      const dates = Object.keys(dailyStats);
      const clicks = Object.values(dailyStats);

      new Chart(ctx, {
        type: 'line',
        data: {
          labels: dates,
          datasets: [{
            label: 'Clicks',
            data: clicks,
            borderColor: 'rgb(79, 70, 229)',
            tension: 0.1
          }]
        },
        options: {
          responsive: true,
          maintainAspectRatio: false,
          scales: {
            y: {
              beginAtZero: true,
              ticks: {
                stepSize: 1
              }
            }
          }
        }
      });
    });
  </script>
</div> 