<!-- app/views/layouts/_navbar.html.erb -->
<nav class="bg-white shadow-md px-6 py-4 flex justify-between items-center relative z-50">
  <!-- Left side (logo or brand) -->
  <div class="text-xl font-bold text-blue-600">
    <%= link_to "Diximity", root_path %>
  </div>

  <!-- Right side (dropdown) -->
  <div class="relative" data-controller="navbar-dropdown">
    <button
      type="button"
      data-action="click->navbar-dropdown#toggle"
      class="flex items-center gap-2 px-4 py-2 text-sm font-medium text-gray-700 hover:text-blue-600"
    >
      Menu ⌄
    </button>

    <div
      data-navbar-dropdown-target="menu"
      class="hidden absolute right-0 mt-2 w-48 bg-white border border-gray-200 rounded-md shadow-lg z-50"
    >
      <div class="py-1 text-sm text-gray-700">
        <%= link_to "👤 Profile", user_path(current_user), class: "block px-4 py-2 hover:bg-gray-100" %>
        <%= link_to "ℹ️ About", "#", class: "block px-4 py-2 hover:bg-gray-100" %>
        <%= link_to "📞 Contact", "#", class: "block px-4 py-2 hover:bg-gray-100" %>
        <%= button_to "🚪 Sign Out", destroy_user_session_path,
              method: :delete,
              form_class: "w-full",
              class: "w-full text-left px-4 py-2 text-red-600 hover:bg-red-100" %>
      </div>
    </div>
  </div>
</nav>
